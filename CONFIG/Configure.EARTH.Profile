#!/bin/sh
if [ $# -le 0 ]; then
    echo 1>&2 Usage: $0 MakefileG.local
    exit 127
fi
if [ -e $1 ]; then
    rm $1
fi
perl fmkmf.pl -f90 pgf95 -opt '-g -Mprof=func -Mbounds -Mconcur' -mpi '-Mpreprocess' -o './objs/EARTH/Profile' \
-l '-L/usr/lib64 -lblas -llapack -lpgftnrtl -Mprof=func -Mconcur' \
-p .:INV:UTILS:FIELDS/FiniteDiff3D:EARTH:EARTH/modelParam:EARTH/FWD:EARTH/ioMod:EARTH/Basics:EARTH/Jacobian \
Global3D.f90 > $1
