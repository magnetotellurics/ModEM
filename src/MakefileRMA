# ------------------Macro-Defs---------------------
include Makefile.local
OBJDIR = ../../objs/MT3D_OO
F90 = mpif90 
FFLAGS = -O3 -ffree-line-length-none -Wno-all
MPIFLAGS = -x f95-cpp-input -DMPI
MODULE = -J $(OBJDIR)
LIBS_PATH = -L/usr/lib64
LIBS = -llapack -lblas

# -------------------End-macro-Defs---------------------------
OBJ = $(OBJDIR)/test_RMA.o 


all: test_RMA 

# Here is the link step 
test_RMA: $(OBJDIR) $(OBJ) 
	 $(F90) -o $(OUTDIR)/test_RMA $(OBJ) $(LIBS_PATH) $(LIBS)

# Here are the compile steps 

$(OBJDIR): 
	mkdir -p $(OBJDIR)

$(OBJDIR)/test_RMA.o:test_RMA.f90  
	 $(F90) -c $(MODULE) $(FFLAGS) $(MPIFLAGS) test_RMA.f90 -o $(OBJDIR)/test_RMA.o

# Type " make clean " to get rid of all object and module files 
clean: 
	cd $(OBJDIR); \
	rm -f *~ *.o *.obj *.mod *.d *.s00 *.dbg *.stackdump \
	`find . -mindepth 1 -name "*~"` 

cleanall: clean 
	rm -f $(OUTDIR)/test_RMA 

src: clean 
	tar cvfz $(ARCHIVE).tgz * 

  
